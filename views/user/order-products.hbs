<style>
  .categories-section{ display: none !important; } .header-search{ display: none
  !important; }
</style>

<section
  class="height-91 w-full flex flex-wrap justify-center bg-slate-50 overflow-y-scroll"
>
  
  {{#each userOrderProducts}}
  <div
    class="today-deals-card height-60 m-2 w-52 rounded-sm bg-white flex flex-col cursor-pointer relative"
  >
    <div
      class="w-full height-55 flex items-center justify-center rounded-t-sm relative"
    >
      <img
        class="max-h-24 absolute"
        src="/product-images/{{this.product._id}}.webp"
        alt=""
      />
    </div>
    <div class="w-full height-45 flex flex-col rounded-t-sm pl-6 pr-6 relative">
      <h1 class="text-xs font-medium">{{this.product.name}}</h1>
      <p class="text-fourth text-xs font-sans mt-3">
        ₹{{this.product.dealprice}}
        <span class="text-xs mt-4 text-slate-400 font-sans line-through">
          ₹{{this.product.maxprice}}</span>
      </p>
      <p class="text-xs mt-3">
        Quantity : 
        <span class="text-xs ml-1">
          {{this.quantity}}</span>
      </p>

    </div>
  </div>
  {{/each}}


</section>