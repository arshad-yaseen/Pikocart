
<style>
    *{
        font-size: unset;
    }
    header{
        display: none !important;
    }
</style>

<div class="h-screen w-full flex flex-col items-center justify-center flex-wrap text-black leading-normal relative bg-white">
      <div class="aurora-gradient-1 w-52 h-52 rounded-full bg-purple-100 absolute top-96 left-96 filter blur-3xl opacity-70"></div>
      <div class="aurora-gradient-2 w-72 h-72 rounded-full bg-cyan-100 absolute top-12 right-96 filter blur-3xl opacity-70"></div>
      <div class="signup-wrapper shadow-xl shadow-blue-50 rounded-lg flex flex-col items-center p-4 bg-white relative">
        {{#if staffSignupErr}}
      <div
        id="errorMessageWrapper"
        class="h-8 rounded-t-lg text-xs absolute w-full bg-red-50 -top-4"
      >
        <p id="errorMessage" class="text-red-500 font-semibold h-full w-full rounded-t-md flex justify-center items-center">
          {{staffSignupErr}}
        </p>
      </div>
      {{/if}}
        <div class="heading-wrapper w-full h-24 flex items-center justify-center">
          <h1 class="text-2xl capitalize font-bold">Become a Staff</h1>
        </div>
        <div class="form-wrapper w-full h-76 flex flex-col items-center px-4">
          <form
            action="/staff-signup"
            class="flex flex-col items-center"
            method="post"
            id="formStaffRegister"
          >
            <input
              required
              autocomplete="off"
              type="text"
              name="staff_name"
              id="staffNameInput"
              placeholder="Enter your name"
              class="bg-slate-50 py-3 pr-28 pl-8 rounded-md placeholder:font-semibold text-sm mb-4 hover:bg-slate-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 mt-1 "
            />
            <input
              required
              autocomplete="off"
              type="email"
              name="staff_email"
              id="staffEmailInput"
              placeholder="Enter email"
              class="bg-slate-50 py-3 pr-28 pl-8 rounded-md placeholder:font-semibold text-sm mb-4 hover:bg-slate-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 mt-1 "
            />

            <input
              required
              autocomplete="off"
              type="password"
              name="staff_code"
              id="staffCodeInput"
              placeholder="Enter staff code"
              class="bg-slate-50 py-3 pr-28 pl-8 rounded-md placeholder:font-semibold text-sm mb-4 hover:bg-slate-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 mt-1 "
            />
            <select
              required
              name="staff_type"
              id="staffTypeOptions"
              class="cursor-pointer bg-slate-50 py-3 w-full pl-6 pr-8 rounded-md placeholder:font-semibold text-sm mb-4 hover:bg-slate-100 focus:outline-none mt-1 appearance-none"
            >
            
         
            <option value="normal">Normal Staff</option>
            <option value="deliveryboy">Delivery Boy</option>

            </select>

            <button
              type="submit"
              class="py-3 px-16 bg-blue-600 text-md text-white hover:bg-blue-500 rounded-lg mt-4"
            >
              Signup
            </button>


            
        <div class="footer-wrapper w-full h-28 absolute bottom-0 flex items-center justify-center">
          <p class="text-sm font-medium">
            Already have a staff accound ?
            <a href="/staff-login"><span
              class="text-blue-500 cursor-pointer hover:text-blue-600 text-sm"
            >
              Login
            </span></a>
          </p>
        </div>
      </div>
    </div>
  