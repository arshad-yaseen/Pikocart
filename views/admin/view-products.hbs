<style>
    .dataTables_length label{
        font-size: .6rem !important;
    }
    .dataTables_filter label{
        font-size: .6rem !important;
    }
    .dataTables_length{
        margin-right: 80px;
        margin-left: 20px;
        margin-top: 10px;
        margin-bottom: 20px;
    }
    .dataTables_filter {
        margin-right: 20px;
        margin-left: 80px;
        margin-top: 20px;
    }
    .dataTables_filter label input{
        outline: none;
        border: 1px solid rgba(128, 128, 128, 0.299) !important;
        margin-left: 10px !important;
        border-radius: 4px !important;
    }
    .dataTables_length label select{
        border: none !important;
        margin: 10px;
        background-color: #f3f6f8 !important;
        outline: none !important;
        cursor: pointer;
    }
    .dataTables_info{
        display: none;
    }
    .dataTables_paginate a{
        font-size: .6rem !important;
        margin-right: 20px !important;
    }
    .dataTables_paginate .current{
        border: none !important;
        background-color: #f3f6f8 !important;
        box-shadow: none !important;
        text: none !important;
    }
    .dataTables_paginate {
        margin-right: 20px !important;
        margin-top: 20px;
        margin-bottom: 180px;
    }
</style>

<section class=" w-full  flex justify-center" >

<div class="table-main-wrapper relative overflow-x-auto mx-8">
<table class="h-1/2 text-sm text-left text-gray-500 " id="products-table">
<thead class="text-xs text-gray-700 uppercase bg-gray-50 :bg-gray-700 :text-gray-400">
<tr >
<th scope="col" class="px-6 py-3">
No
</th>
<th scope="col" class="px-6 py-3">
Product name
</th>
<th scope="col" class="px-6 py-3">
Offer
</th>
<th scope="col" class="px-6 py-3">
Category
</th>
<th scope="col" class="px-6 py-3">
Price
</th>
<th scope="col" class="px-6 py-3">
Image
</th>
<th scope="col" class="px-20 py-3">
Modify
</th>

</tr>
</thead>
<tbody>

{{#each products}}

<tr class="bg-white border-b :bg-gray-800 :border-gray-200">
<th scope="row" class="px-6 py-4 font-medium text-gray-900 :text-white whitespace-nowrap">
{{inc @index}}
</th>
<th scope="row" class="px-6 py-4 font-medium text-gray-900 :text-white whitespace-nowrap">
{{this.name}}
</th>
<td class="px-6 py-4">
{{this.offerpers}}% off
</td>
<td class="px-6 py-4">
{{this.category}}
</td>
<td class="px-6 py-4 font-sans">
â‚¹{{this.dealprice}}
</td>
<td class="pl-6 pr-0 py-4">
<img class="h-8 w-auto" src="/product-images/{{this._id}}.jpg" alt="">
</td>
<td class=" py-4">
<a href="/admin/edit-product/{{this._id}}" class="font-medium mr-4 py-1 px-3 border-2 border-blue-500 text-blue-500 rounded-md hover:bg-blue-500 hover:text-white">Edit</a>

<a href="/admin/delete-product/{{this._id}}" class="font-medium py-1 px-3 border-2 border-red-500 text-red-500 rounded-md hover:bg-red-500 hover:text-white" onclick="return confirm('Are you sure you want to delete {{this.name}} ?');">Delete</a>
</td>
</tr>

{{/each}}

</tbody>
</table>
</div>

</section>

<script>
    $(document).ready( function () {
    $('#products-table').DataTable();
} );
</script>