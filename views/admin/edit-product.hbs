
<form autocomplete="off" action="/admin/edit-product" method="post" enctype="multipart/form-data" class="w-full h-screen">


    <div class="py-6 px-20 w-full flex flex-col float-left" >

        <label for="text" class="block text-slate-700 text-xs font-medium mb-2 mt-0">Product name</label>
        <input value="{{product.description}}" class="text-xs font-medium bg-whit pr-20 pl-2 py-1 rounded-md ring-1 ring-offset-1 ring-slate-300" type="text" name="description">

        <label for="text" class="block text-slate-700 text-xs font-medium mb-2 mt-3">Product short name</label>
        <input value="{{product.name}}" class="text-xs font-medium bg-whit pr-16 pl-2 py-1 rounded-md ring-1 ring-offset-1 ring-slate-300" type="text" name="name" maxlength="30">

        <label for="text" class="block text-slate-700 text-xs font-medium mb-2 mt-3">Product Category</label>
       <select class="text-xs font-medium bg-whit pr-20 pl-2 py-1 rounded-md ring-1 ring-offset-1 ring-slate-300 cursor-pointer" type="text" name="category">
           {{#if product.category}}
            <option value="{{product.category}}">{{product.category}}</option>
            {{else}}
            <option value="nothing">Select Category</option>
           {{/if}}
            <option value="mobile">Mobile</option>
            <option value="fashion">Fashion</option>
            <option value="electronics">Electronics</option>
            <option value="beauty">Beauty</option>
            <option value="home">Home</option>
            <option value="appliances">Appliances</option>
            <option value="kids&toys">Kids&Toys</option>
            <option value="watch">Watch</option>
            <option value="laptop">Pc&Laptops</option>
            <option value="sports">Sports</option>
            <option value="shoe">Shoe</option>
        </select>

        <label for="text" class="block text-slate-700 text-xs font-medium mb-2 mt-3">Original price</label>
        <input value="{{product.maxprice}}" class="text-xs font-medium font-sans bg-whit pr-20 pl-2 py-1 rounded-md ring-1 ring-offset-1 ring-slate-300" type="text" name="maxprice">

        <label for="text" class="block text-slate-700 text-xs font-medium mb-2 mt-3">Deal price</label>
        <input value="{{product.dealprice}}" class="text-xs font-medium font-sans bg-whit pr-20 pl-2 py-1 rounded-md ring-1 ring-offset-1 ring-slate-300" type="text" name="dealprice">

        <label for="text" class="block text-slate-700 text-xs font-medium mb-2 mt-3">Discount persantage</label>
        <input value="{{product.offerpers}}" class="text-xs font-medium font-sans bg-whit pr-20 pl-2 py-1 rounded-md ring-1 ring-offset-1 ring-slate-300" type="text" name="offerpers" placeholder="ex: 25">

        <label for="text" class="block text-slate-700 text-xs font-medium mb-2 mt-3">Size (optional)</label>
        <input value="{{product.size}}" class="text-xs font-medium font-sans bg-whit pr-20 pl-2 py-1 rounded-md ring-1 ring-offset-1 ring-slate-300" type="text" name="size" placeholder="ex: XXL">

        <label for="text" class="  text-slate-700 text-xs font-medium mb-2 mt-3">stock</label>
        <input id="checkbox1" class="cursor-pointer text-xs font-medium font-sans bg-whit pr-20 pl-2 py-1 rounded-md ring-1 ring-offset-1 ring-slate-300" type="checkbox" checked name="stock">

        <img src="/product-images/{{product._id}}.jpg" alt="" class="h-32 w-36 mt-6">

         <div class="form-input mt-6 mb-4 flex justify-center relative shadow-none rounded-md bg-slate-100 h-60">
        <div class="preview">

