        <img id="file-ip-1-preview" class="rounded-md">
        </div>
        <label class="absolute bottom-6 bg-primary " for="file-ip-1">Upload image</label>
        <input type="file" id="file-ip-1" accept="image/*" onchange="showPreview(event);" name="mainImage">
        </div>

            <label for="text" class="block text-slate-700 text-xs font-medium mb-2 mt-3">Color</label>
        <input value="{{product.color}}" class="text-xs font-medium font-sans bg-whit pr-20 pl-2 py-1 rounded-md ring-1 ring-offset-1 ring-slate-300" type="text" name="color" placeholder="ex: red">

        <input class="hidden text-xs font-medium font-sans bg-whit pr-20 pl-2 py-1 rounded-md ring-1 ring-offset-1 ring-slate-300" type="text" value={{product._id}} name="id" placeholder="ex: red, starlight, black">

      <button type="submit" class="text-xs bg-primary py-2 w-40 text-white rounded-sm mt-6" >Save Changes</button >

      </div>
        


</form>